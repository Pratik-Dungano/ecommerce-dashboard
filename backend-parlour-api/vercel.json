{
  "version": 2,
  "builds": [
    {
      "src": "src/serverless.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/serverless.ts"
    },
    {
      "src": "/health",
      "dest": "src/serverless.ts"
    },
    {
      "src": "/(.*)",
      "dest": "src/serverless.ts"
    }
  ],
  "functions": {
    "src/serverless.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
} 